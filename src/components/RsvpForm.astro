---
import { ui, defaultLang } from "../i18n/ui";

const { lang = defaultLang } = Astro.props;
const t = ui[lang as keyof typeof ui] || ui[defaultLang];
const rsvpEndpoint = import.meta.env.PUBLIC_RSVP_ENDPOINT || "";
---

<div class="rsvp-form-wrapper">
  <p class="rsvp-deadline">
    {t["rsvp.deadlinemsg"]}
    <strong>{t["rsvp.deadline"]}</strong>.
  </p>

  {
    !rsvpEndpoint && (
      <p class="rsvp-error">
        Missing <code>PUBLIC_RSVP_ENDPOINT</code>. Set it in <code>.env</code>{" "}
        or GitHub Actions secrets.
      </p>
    )
  }

  <iframe name="rsvp_hidden_iframe" class="hidden"></iframe>

  <form
    id="rsvpForm"
    class="rsvp-form"
    action={rsvpEndpoint}
    method="POST"
    target="rsvp_hidden_iframe"
    data-lang={lang}
  >
    <div class="form-row">
      <label class="form-field">
        <span class="form-label">{t["rsvp.fullname"]}</span>
        <input name="fullName" required class="form-input" />
      </label>

      <label class="form-field">
        <span class="form-label">{t["rsvp.email"]}</span>
        <input name="email" type="email" class="form-input" />
      </label>
    </div>

    <div class="form-row">
      <label class="form-field">
        <span class="form-label">{t["rsvp.attending"]}</span>
        <select name="attending" required class="form-input">
          <option value="yes">{t["rsvp.yes"]}</option>
          <option value="no">{t["rsvp.no"]}</option>
        </select>
      </label>

      <label class="form-field">
        <span class="form-label">{t["rsvp.guests"]}</span>
        <input
          name="guests"
          type="number"
          min="1"
          max="10"
          value="1"
          class="form-input"
        />
      </label>
    </div>

    <label class="form-field">
      <span class="form-label">{t["rsvp.dietary"]}</span>
      <input name="dietary" class="form-input" />
    </label>

    <label class="form-field">
      <span class="form-label">{t["rsvp.message"]}</span>
      <textarea name="message" rows="4" class="form-input form-textarea"
      ></textarea>
    </label>

    <!-- Honeypot (spam trap): bots fill it, humans won't -->
    <input name="website" tabindex="-1" autocomplete="off" class="hidden" />

    <button
      id="rsvpBtn"
      type="submit"
      class="btn btn-primary submit-btn"
      disabled={!rsvpEndpoint}
    >
      {t["rsvp.send"]}
    </button>

    <p id="rsvpStatus" class="rsvp-status"></p>
  </form>

  <div
    id="i18n-data"
    class="hidden"
    data-sending={t["rsvp.sending"]}
    data-sent={t["rsvp.sent"]}
    data-success={t["rsvp.success"]}
  >
  </div>

  <script>
    const form = document.getElementById("rsvpForm");
    const btn = document.getElementById("rsvpBtn");
    const status = document.getElementById("rsvpStatus");
    const i18n = document.getElementById("i18n-data");

    if (form && btn && status && i18n) {
      const tSending = i18n.dataset.sending;
      const tSent = i18n.dataset.sent;
      const tSuccess = i18n.dataset.success;

      form.addEventListener("submit", () => {
        btn.disabled = true;
        btn.textContent = tSending;

        window.setTimeout(() => {
          status.textContent = tSuccess;
          btn.textContent = tSent;
          form.reset();
        }, 600);
      });
    }
  </script>
</div>

<style>
  .rsvp-form-wrapper {
    max-width: 600px;
    margin: 0 auto;
  }

  .rsvp-deadline {
    text-align: center;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-size: 1rem;
  }

  .rsvp-error {
    text-align: center;
    color: #b91c1c;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .rsvp-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-row {
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .form-row {
      grid-template-columns: 1fr 1fr;
    }
  }

  .form-field {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--text-secondary);
  }

  .form-input {
    width: 100%;
    padding: 1rem;
    font-family: var(--font-sans);
    font-size: 1rem;
    color: var(--text-primary);
    background: #fff;
    border: 1px solid var(--border-color);
    transition: border-color 0.2s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--text-primary);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-btn {
    align-self: center;
    min-width: 200px;
    margin-top: 1rem;
  }

  .submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .rsvp-status {
    text-align: center;
    font-size: 0.875rem;
    color: var(--text-secondary);
    min-height: 1.25rem;
  }

  .hidden {
    display: none !important;
  }
</style>
