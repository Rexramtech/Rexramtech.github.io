---
/**
 * Root index page - renders Spanish content directly (default language)
 * with client-side language detection that redirects if needed.
 *
 * This avoids the flash of "Redirecting..." text and provides instant
 * content for Spanish speakers (the primary audience).
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Section from "../components/Section.astro";
import RsvpForm from "../components/RsvpForm.astro";
import { wedding } from "../data/wedding";
import { ui, languages, defaultLang } from "../i18n/ui";

// Image imports
import churchDrawing from "../assets/church_location_drawing.png";
import churchPhoto from "../assets/church_location_photo.jpeg";
import receptionDrawing from "../assets/reception_location_drawing.png";
import receptionPhoto from "../assets/reception_location_photo.jpeg";

// Image style toggle: 'drawing' or 'photo'
const imageStyle = import.meta.env.PUBLIC_IMAGE_STYLE || "drawing";
const isDrawingMode = imageStyle === "drawing";

// Select images based on style
const ceremonyImage = isDrawingMode ? churchDrawing : churchPhoto;
const receptionImage = isDrawingMode ? receptionDrawing : receptionPhoto;

// Default to Spanish (es) for the root page
const currentLang = defaultLang;
const data = wedding[currentLang];
const t = ui[currentLang];

// Supported languages for detection
const supportedLangs = Object.keys(languages);
---

<BaseLayout title={`${data.couple} Â· ${data.dateDisplay}`}>
  <!-- Client-side language detection - redirects if browser prefers en/pt -->
  <script define:vars={{ supportedLangs, defaultLang }}>
    (function () {
      if (window.location.pathname !== "/" && window.location.pathname !== "")
        return;

      const hasVisited = sessionStorage.getItem("langVisited");
      if (hasVisited) return;

      sessionStorage.setItem("langVisited", "true");

      const browserLang = navigator.language?.split("-")[0] || defaultLang;

      if (browserLang !== defaultLang && supportedLangs.includes(browserLang)) {
        window.location.replace("/" + browserLang + "/");
      }
    })();
  </script>

  <Nav couple={data.couple} dateDisplay={data.dateDisplay} lang={currentLang} />

  <main>
    <!-- HERO - Full bleed with overlay -->
    <section class="hero">
      <img
        src={`${import.meta.env.BASE_URL}hero.jpg`}
        alt={data.couple}
        class="hero-bg"
        loading="eager"
      />
      <div class="hero-overlay"></div>

      <!-- Text at top -->
      <div class="hero-top">
        <p class="hero-tagline">{data.headline}</p>
        <h1 class="hero-title">{data.couple}</h1>
        <p class="hero-date">{data.dateDisplay}</p>
      </div>

      <!-- Buttons at bottom -->
      <div class="hero-bottom">
        <a href="#rsvp" class="btn btn-light">{t["hero.rsvp"]}</a>
        <a href="#ceremony" class="btn btn-light-outline">{t["hero.details"]}</a
        >
      </div>
    </section>

    <!-- WELCOME MESSAGE -->
    <Section id="welcome">
      <div class="welcome-content">
        <p class="welcome-text">{data.welcomeMessage}</p>
      </div>
    </Section>

    <!-- CEREMONY - Asymmetric layout -->
    <Section id="ceremony" title={t["ceremony.title"]}>
      <div class="asymmetric-section">
        <img
          src={ceremonyImage.src}
          alt={data.ceremony.place}
          class="section-image"
          loading="lazy"
        />
        <div class="section-content">
          <h3 class="location-time">{data.ceremony.time}</h3>
          <p class="location-name">{data.ceremony.place}</p>
          <p class="location-address">
            {data.ceremony.addressLines.join(", ")}
          </p>
          <p class="location-date">{data.ceremony.date}</p>
          {
            data.ceremony.mapUrl !== "#" && (
              <a
                class="link location-link"
                href={data.ceremony.mapUrl}
                target="_blank"
                rel="noreferrer"
              >
                {t["ceremony.map"]}
              </a>
            )
          }
        </div>
      </div>
    </Section>

    <!-- RECEPTION - Asymmetric layout (reversed) -->
    <Section id="celebration" title={t["celebration.title"]}>
      <div class="asymmetric-section reverse">
        <img
          src={receptionImage.src}
          alt={data.reception.place}
          class="section-image"
          loading="lazy"
        />
        <div class="section-content">
          <p class="location-name">{data.reception.place}</p>
          <p class="location-subtitle">{data.reception.location}</p>
          <p class="location-address">
            {data.reception.addressLines.join(", ")}
          </p>
          <p class="location-description">{data.reception.description}</p>
          {
            data.reception.mapUrl !== "#" && (
              <a
                class="link location-link"
                href={data.reception.mapUrl}
                target="_blank"
                rel="noreferrer"
              >
                {t["celebration.map"]}
              </a>
            )
          }
        </div>
      </div>
    </Section>

    <!-- RSVP Section -->
    <Section id="rsvp" title={t["attendance.title"]}>
      <RsvpForm lang={currentLang} />
      <p class="rsvp-thanks">{t["attendance.thanks"]}</p>
    </Section>

    <!-- CONTACT -->
    <Section id="contact" title={t["contact.title"]}>
      <div class="contact-content">
        <p class="contact-message">{data.contact.message}</p>
        <div class="contact-grid">
          <div class="contact-person">
            <p class="contact-name">{data.contact.sergio.name}</p>
            <a href={`tel:${data.contact.sergio.phone}`} class="link">
              {data.contact.sergio.phone}
            </a>
          </div>
          <div class="contact-person">
            <p class="contact-name">{data.contact.barbara.name}</p>
            <a href={`tel:${data.contact.barbara.phone}`} class="link">
              {data.contact.barbara.phone}
            </a>
          </div>
        </div>
      </div>
    </Section>

    <!-- FOOTER -->
    <footer class="site-footer">
      <div class="container">
        <p>{t["footer.built_with"]}</p>
      </div>
    </footer>
  </main>
</BaseLayout>

<style>
  /* Hero section */
  .hero {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Mobile: shift image focus to center on the couple (positioned right in photo) */
  @media (max-width: 768px) {
    .hero-bg {
      object-position: 64% center;
    }
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.2);
  }

  .hero-top {
    position: relative;
    z-index: 10;
    text-align: center;
    color: #fff;
    padding: calc(15vh + 60px) var(--site-gutter, 4vw) 2rem;
  }

  .hero-bottom {
    position: relative;
    z-index: 10;
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    padding: 2rem var(--site-gutter, 4vw) 8vh;
  }

  .hero-tagline {
    font-size: 1rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .hero-title {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 400;
    margin-bottom: 0.5rem;
  }

  .hero-date {
    font-size: 1.125rem;
    letter-spacing: 0.15em;
    opacity: 0.85;
  }

  /* Welcome section */
  .welcome-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .welcome-text {
    font-family: var(--font-serif);
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    line-height: 1.8;
    color: var(--text-secondary);
  }

  /* Asymmetric sections */
  .asymmetric-section {
    display: grid;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .asymmetric-section {
      grid-template-columns: 1fr 1fr;
      gap: 5rem;
    }

    .asymmetric-section.reverse {
      direction: rtl;
    }

    .asymmetric-section.reverse > * {
      direction: ltr;
    }
  }

  .section-image {
    width: 100%;
    aspect-ratio: 3/4;
    object-fit: cover;
  }

  .section-content {
    text-align: center;
  }

  @media (min-width: 768px) {
    .section-content {
      text-align: left;
    }

    .asymmetric-section.reverse .section-content {
      text-align: right;
    }
  }

  .location-time {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .location-name {
    font-family: var(--font-serif);
    font-size: clamp(1.5rem, 3vw, 2rem);
    margin-bottom: 0.5rem;
  }

  .location-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .location-address {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .location-date {
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .location-description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .location-link {
    display: inline-block;
    margin-top: 0.5rem;
  }

  /* RSVP section */
  .rsvp-thanks {
    text-align: center;
    margin-top: 3rem;
    font-family: var(--font-serif);
    font-size: 1.25rem;
    color: var(--text-secondary);
  }

  /* Contact section */
  .contact-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .contact-message {
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .contact-grid {
    display: flex;
    justify-content: center;
    gap: 4rem;
    flex-wrap: wrap;
  }

  .contact-person {
    text-align: center;
  }

  .contact-name {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  /* Footer */
  .site-footer {
    padding: 4rem 0;
    text-align: center;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }
</style>
