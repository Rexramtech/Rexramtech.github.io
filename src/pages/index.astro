---
/**
 * Root index page - renders Spanish content directly (default language)
 * with client-side language detection that redirects if needed.
 *
 * This avoids the flash of "Redirecting..." text and provides instant
 * content for Spanish speakers (the primary audience).
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Section from "../components/Section.astro";
import RsvpForm from "../components/RsvpForm.astro";
import { wedding } from "../data/wedding";
import { ui, languages, defaultLang } from "../i18n/ui";

// Image imports
import churchDrawing from "../assets/church_location_drawing.png";
import churchPhoto from "../assets/church_location_photo.jpeg";
import receptionDrawing from "../assets/reception_location_drawing.png";
import receptionPhoto from "../assets/reception_location_photo.jpeg";

// Image style toggle: 'drawing' or 'photo'
const imageStyle = import.meta.env.PUBLIC_IMAGE_STYLE || "drawing";
const isDrawingMode = imageStyle === "drawing";

// Select images based on style
const ceremonyImage = isDrawingMode ? churchDrawing : churchPhoto;
const receptionImage = isDrawingMode ? receptionDrawing : receptionPhoto;

// Default to Spanish (es) for the root page
const currentLang = defaultLang;
const data = wedding[currentLang];
const t = ui[currentLang];

// Supported languages for detection
const supportedLangs = Object.keys(languages);
---

<BaseLayout title={`${data.couple} · ${data.dateDisplay}`}>
  <!-- Client-side language detection - redirects if browser prefers en/pt -->
  <script define:vars={{ supportedLangs, defaultLang }}>
    (function () {
      // Only run on first visit to root
      if (window.location.pathname !== "/" && window.location.pathname !== "")
        return;

      // Check if user already visited (don't redirect them back)
      const hasVisited = sessionStorage.getItem("langVisited");
      if (hasVisited) return;

      // Mark as visited
      sessionStorage.setItem("langVisited", "true");

      // Detect browser language
      const browserLang = navigator.language?.split("-")[0] || defaultLang;

      // If browser prefers a different supported language, redirect
      if (browserLang !== defaultLang && supportedLangs.includes(browserLang)) {
        window.location.replace("/" + browserLang + "/");
      }
    })();
  </script>

  <Nav couple={data.couple} dateDisplay={data.dateDisplay} lang={currentLang} />

  <!-- HERO -->
  <main>
    <section class="relative">
      <div class="h-[70vh] min-h-[520px] w-full">
        <img
          src={`${import.meta.env.BASE_URL}hero.jpg`}
          alt="Sergio & Bárbara"
          class="h-full w-full object-cover"
          loading="eager"
        />
      </div>

      <div class="absolute inset-0 bg-black/20"></div>

      <div class="absolute inset-0 flex items-center">
        <div class="container-narrow">
          <h1 class="text-white text-4xl md:text-6xl tracking-tight">
            {data.headline}
          </h1>
          <p class="mt-4 text-white/90 text-lg">{data.couple}</p>
          <p class="mt-2 text-white/80">{data.dateDisplay}</p>

          <div class="mt-8 flex gap-3">
            <a
              href="#rsvp"
              class="rounded-xl bg-white text-black px-5 py-3 hover:opacity-90"
            >
              {t["hero.rsvp"]}
            </a>
            <a
              href="#ceremony"
              class="rounded-xl bg-black/40 text-white px-5 py-3 hover:bg-black/55"
            >
              {t["hero.details"]}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- WELCOME MESSAGE -->
    <Section id="welcome" title="">
      <div class="card p-8 md:p-12 text-center">
        <p class="text-lg md:text-xl text-black/80 leading-relaxed">
          {data.welcomeMessage}
        </p>
      </div>
    </Section>

    <!-- CEREMONY -->
    <Section id="ceremony" title={t["ceremony.title"]}>
      <div class="card overflow-hidden">
        <img
          src={ceremonyImage.src}
          alt={data.ceremony.place}
          class="w-full h-64 md:h-80 object-cover"
          loading="lazy"
        />
        <div class="p-6 md:p-10">
          <p class="text-black/70 mb-2">{data.ceremony.date}</p>
          <p class="text-black/70 mb-4">{data.ceremony.time}</p>
          <p class="text-xl font-medium">{data.ceremony.place}</p>
          <p class="text-black/70 mt-2">
            {data.ceremony.addressLines.join(" · ")}
          </p>
          {
            data.ceremony.mapUrl !== "#" && (
              <a
                class="link inline-block mt-4"
                href={data.ceremony.mapUrl}
                target="_blank"
                rel="noreferrer"
              >
                {t["ceremony.map"]}
              </a>
            )
          }
        </div>
      </div>
    </Section>

    <!-- CELEBRATION -->
    <Section id="celebration" title={t["celebration.title"]}>
      <div class="card overflow-hidden">
        <img
          src={receptionImage.src}
          alt={data.reception.place}
          class="w-full h-64 md:h-80 object-cover"
          loading="lazy"
        />
        <div class="p-6 md:p-10">
          <p class="text-xl font-medium">
            {data.reception.place} - {data.reception.location}
          </p>
          <p class="text-black/70 mt-2">
            {data.reception.addressLines.join(" · ")}
          </p>
          <p class="text-black/80 mt-4">
            {data.reception.description}
          </p>
          {
            data.reception.mapUrl !== "#" && (
              <a
                class="link inline-block mt-4"
                href={data.reception.mapUrl}
                target="_blank"
                rel="noreferrer"
              >
                {t["celebration.map"]}
              </a>
            )
          }
        </div>
      </div>
    </Section>

    <!-- ATTENDANCE / RSVP -->
    <Section id="rsvp" title={t["attendance.title"]}>
      <RsvpForm lang={currentLang} />
      <p class="text-center mt-8 text-xl">{t["attendance.thanks"]}</p>
    </Section>

    <!-- CONTACT -->
    <Section id="contact" title={t["contact.title"]}>
      <div class="card p-6 md:p-10 text-center space-y-6">
        <p class="text-black/80">
          {data.contact.message}
        </p>
        <div class="flex flex-col md:flex-row justify-center gap-6 md:gap-12">
          <div>
            <p class="font-medium text-lg">{data.contact.sergio.name}</p>
            <a href={`tel:${data.contact.sergio.phone}`} class="link">
              {data.contact.sergio.phone}
            </a>
          </div>
          <div>
            <p class="font-medium text-lg">{data.contact.barbara.name}</p>
            <a href={`tel:${data.contact.barbara.phone}`} class="link">
              {data.contact.barbara.phone}
            </a>
          </div>
        </div>
      </div>
    </Section>

    <footer class="py-16">
      <div class="container-narrow text-center text-sm text-black/60">
        {t["footer.built_with"]}
      </div>
    </footer>
  </main>
</BaseLayout>
